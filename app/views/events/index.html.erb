<div class="events-banner-bg m-0" >
<div class="container my-4">
    <div class="row">
      <form>
        <div class="form-row mt-3">
          <div class="col-5">
            <input type="text" class="form-control border-0" placeholder="LocalizaÃ§Ã£o">
          </div>
          <div class="col-5">
            <input type="text" class="form-control border-0" placeholder="Data">
          </div>
          <div class="col-2">
            <a class="btn btn-ghost" href="#"><i class="fas fa-search icon-search"></i></a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="row m-0">
    <div class="col-12" style="margin-top:0;">
      <h2 style = "color:white"class="destaques neonLand my-5">eventos</h2>
    </div>
  </div>
  <div class="row justify-content-center m-0">
    <% @events.each do |event|%>
      <div class="event-body col-3">
        <div class="flat-card">
          <div>
            <% if event.photo.attached? %>
              <%= cl_image_tag event.photo.key, height: 134, width: 262, crop: :fill %>
            <% end %>
          </div>
          <div class="event-text">
            <h6><strong><%= event.name %></strong></h5>
            <p style="color:red;">A partir de <%= event.price %></p>
            <p><%= event.region %></p>
            <p><%= event.address %></p>
          </div>
          <div class="event-body">
            <%= link_to '+ info',event_path(event), class: "btn btn-outline-dark btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
