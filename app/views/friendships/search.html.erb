<div class="d-flex justify-content-center align-items-center flex-column mt-3">
  <div style="" class="group-chat-container d-flex flex-column justify-content-center text-center mt-3">
    <h3><strong>Procure o seu amigo!</strong></h3>
    <div style="width: 800px; height:100px" class="group-card justify-content-center align-itens-center pt-4 mx-1" >
      <%= form_with url: search_friendships_url, method: :get do %>
        <div class="d-flex justify-content-around align-itens-center mt-1">
          <div id="group-input" style="height: 40px; width:610px;"class="container d-flex justify-content-center align-itens-center">
            <%= text_field_tag :nickname, params[:nickname], class: "form-control", placeholder: "Digite um nome" %>
          </div>
          <div style="text-align;" class="mr-3">
            <%= submit_tag 'Pesquisar', class: "btn botton-search" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-around m-0">
  <% if @users.present? %>
    <% @users.each do |user|%>
      <div class="row card m-3 radius-10 col-2 group-chat-container"  style=" width: 15rem;">
        <div class="card-body" id="bg-card">
          <%= simple_form_for @friendship do |f| %>
          <div style="text-align: center;">
            <h5><%= cl_image_tag user.photo.key, class:"avatar-large" if user.photo.attached? %></h5>
          </div>
            <div style="text-align: center;">
              <%= user.nickname %>
            </div>
            <%= f.hidden_field :user_id, value: user.id%>
            <div style="text-align: center;">
              <%= f.submit "Adicionar"%>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <h2> Usuário não encontrado! <i class="far fa-frown"></i></h2>
  <% end %>
</div>
