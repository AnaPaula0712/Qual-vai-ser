<div class="destaques neonLand my-5">
  <h1>Votação</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="group-chat-container d-flex flex-column justify-content-center">
    <% @grouped_events.each do |grouped_event| %>
      <div style="width: 1000px;" class="group-card mt-3 d-flex">
          <%= cl_image_tag grouped_event.event.photo.key, height: 175, width: 350, class: "image-vote m-4"%>
          <div class="my-4">
            <%= link_to(event_path(grouped_event.event)) do %>
              <h4><%= grouped_event.event.name %></h4>
            <% end %>
            <p>Preço: <%= grouped_event.event.price %></p>
            <p>Região: <%= grouped_event.event.region %></p>
            <div class="d-flex align-items-center mt-0 ml-2">
              <%= link_to "Votar", votes_group_grouped_events_path(grouped_event_id: grouped_event.id), method: :post, class: "btn btn-primary mr-2"%>
              <% grouped_event.points.times do %>
                <div class="votes-big"></div>
              <% end %>
              <div style="font-size: 22px;" class="ml-1">
                <%=  grouped_event.points %>
              </div>
            </div>
          </div>
      </div>
    <% end %>
    <div class="d-flex justify-content-center mt-3">
      <%= link_to "Cancelar seu voto", votes_group_grouped_events_path(@group), method: :delete, class: "btn botton-vote d-flex align-items-center" %>
    </div>
  </div>
</div>
<div class="row justify-content-around mt-3 mb-3 text-white">
  <div>
    <% if @member[0].adm %></p>
      <%= link_to "Finalizar votação", close_group_groups_path(@group), method: :patch, class: "btn botton-enquete" %>
    <% end %>
    <%= link_to "Voltar para Grupo", group_path(@group), class: "btn botton-back" %>
  </div>
</div>
