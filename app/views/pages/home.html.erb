<div class="backland">
  <div class="container my-4">
    <div class="row">
      <form>
        <div class="form-row mt-3">
          <div class="col-5">
            <input type="text" class="form-control border-0" placeholder="Localização">
          </div>
          <div class="col-5">
            <input type="text" class="form-control border-0" placeholder="Data">
          </div>
          <div class="col-2">
            <a class="btn btn-ghost" href="#"><i class="fas fa-search icon-search"></i></a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div id="carouselExampleSlidesOnly" class="carousel slide w-100" data-ride="carousel">
    <div style="text-align:center">
      <%= link_to 'todos os eventos', events_path, class: "btn btn-danger"%>
    </div>
    <div class="carousel-inner mx-auto" style="width: 1208px; height: 400px; border-radius: 15px;" >

      <% 10.times do |i| %>
        <div class="carousel-item <%= "active" if i.zero? %>">
            <%= image_tag("img#{i + 1}.jpg", class: "d-block w-100") %>
        </div>
      <%end%>
    </div>
  </div>
</div>
