<div class="message-container" id="message-<%= message.id %>">
  <div  style="width:465px;" class="comment-container d-flex">
    <div class="d-flex flex-column">
      <%= cl_image_tag message.user.photo.key, class: "avatar-comment"%>
      <%= message.user.nickname %>
    </div>
    <div class="d-flex flex-column">
      <div class="chat-date ml-2">
        <%= message.created_at.strftime("%b %e at %l:%M%p") %>
      </div>
      <p class="comment ml-2"><%= message.content %></p>
    </div>
  </div>
</div>
