
<div style="text-align:center;">
  <%= link_to 'Crie um grupo',new_group_path, class: "btn btn-primary btn-lg" %>
</div>
<div class="row justify-content-around m-0">
  <% @groups.each do |group|%>
    <div>
      <ul class="list-group">
      <li class="list-group-item"><strong>Nome: </strong><%= group.name %></li>
      <li class="list-group-item"><strong>membros: </strong>
        <% group.members.each do |a|%>
        <%= cl_image_tag a.user.photo.key, class:"avatar-group" if a.user.photo.attached? %>
        <%end%>
      </li>
      <li class="list-group-item"><strong>Administrador: </strong><%= group.user.id %></li>


      <%= link_to '+ info',group_path(group), class: "btn btn-outline-warning" %>

    </div>
  <% end %>
</div>
