<h1> Seus grupos : </h1>
<%= link_to 'create a group',new_group_path, class: "btn btn-outline-dark btn-sm radius-15" %>
<div class="row justify-content-around m-0">
<% @groups.each do |group|%>
<div>
  <ul class="list-group">
  <li class="list-group-item"><strong>Nome: </strong><%= group.name %></li>
  <li class="list-group-item"><strong>Administrador: </strong><%= group.user.id %></li>

  <div class = "event-body text-center">
    <%= link_to '+ info',group_path(group), class: "btn btn-outline-dark btn-sm radius-15" %>
  </div>
<% end %>
<div style="text-align:center">
  <%= link_to 'Profile', profiles_path, class: "btn btn-secondary btn-lg mt-3 mb-4 radius-15" %>
</div>
</div>
