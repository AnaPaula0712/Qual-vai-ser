
<body>
  <div><h2 style="color: white">Bem-vindo, <%= current_user.nickname %></h2></div>
    <div class="row justify-content-around m-0">
      <div class="box" id="one">
        <div style="color: white; text-align:center;">
          <h4>Eventos favoritados</h4>
        </div>
        <div class="card-product">
          <% current_user.favorites.each do |favorite| %>
            <div class="card-product-infos">
              <h5 style="color: black"><%= favorite.event.name %></h5>
            </div>
          <% end %>
        </div>

      </div>

      <div class="div"></div>

      <div class="field">


        <div class="box" id="two">
          <div style="color: white; text-align:center;">
              <h4>Amigos</h4>
          </div>
          <div>
            <div class="row justify-content-around m-0">
              <% @friendships.each do |friendship| %>
              <div class="col-4">
                  <h5 style="color: white"><%= friendship.friend_id %></h5>
              </div>
              <% end %>
            </div>
          </div>
            <div class="add-button"style="text-align:center;">
              <%= link_to 'Adicione amigos',new_friendship_path, class: "btn btn-outline-primary btn-sm radius-15" %>
            </div>
          </div>
        </div>
      </div>
       <div class="button-group">
          <%= link_to 'Grupos', groups_path, class: "btn btn-outline-primary btn-sm radius-15" %>
        </div>

      <div class="button-back">
        <%= link_to 'Voltar',events_path, class: "btn btn-outline-primary btn-sm radius-15" %>
      </div>
</body>
