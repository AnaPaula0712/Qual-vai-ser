
  <div style="text-align:center; mt-20">
    <div class="corpo-login" style="max-height: 80vh;">
      <div class="escopo col-md-10 col-sm-10 col-xs-12 form-inputs mb-2 radius-15">
        <div style="text-align:center;">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          label: "E-mail",
                           input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          label: "Senha",
                          input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: "Lembrar-me", as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Entrar", class: "btn btn-primary btn-sm"%>
              <p>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
